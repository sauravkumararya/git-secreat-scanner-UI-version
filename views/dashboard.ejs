<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Security Command Center</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body { background-color: #0f1116; color: #e6edf3; }
        .card { background-color: #161b22; border: 1px solid #30363d; }
        .navbar { background-color: #161b22 !important; border-bottom: 1px solid #30363d; }
        .table { --bs-table-bg: #161b22; --bs-table-color: #e6edf3; border-color: #30363d; }
        .table-hover tbody tr:hover { color: #fff; background-color: #21262d; }
        .stat-card-icon { font-size: 2rem; opacity: 0.8; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark mb-4">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold text-success" href="/dashboard">
                <i class="bi bi-shield-lock-fill text-success fs-4"></i>NPCI Secret<span class="text-light">Scanner</span>
            </a>
            <span class="navbar-text text-secondary">Security Command Center</span>
        </div>
    </nav>

    <div class="container-fluid px-4">
        
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card p-3 shadow-sm">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-secondary text-uppercase mb-1">Total Scans</h6>
                            <h2 class="mb-0 fw-bold text-light"><%= global.totalScans %></h2>
                        </div>
                        <div class="stat-card-icon text-primary">üì°</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 shadow-sm">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-secondary text-uppercase mb-1">Secrets Detected</h6>
                            <h2 class="mb-0 fw-bold <%= global.totalIssues > 0 ? 'text-danger' : 'text-success' %>">
                                <%= global.totalIssues %>
                            </h2>
                        </div>
                        <div class="stat-card-icon text-danger">üêû</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 shadow-sm">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-secondary text-uppercase mb-1">Vulnerable Apps</h6>
                            <h2 class="mb-0 fw-bold text-warning"><%= global.vulnerableProducts %></h2>
                        </div>
                        <div class="stat-card-icon text-warning">‚ö†Ô∏è</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header border-bottom border-secondary bg-transparent">
                        <h5 class="mb-0">üìä Monthly Security Trends</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="trendChart" style="max-height: 300px;"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header border-bottom border-secondary bg-transparent d-flex justify-content-between">
                        <h5 class="mb-0">Product Status</h5>
                        <button class="btn btn-sm btn-outline-secondary">Export CSV</button>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="text-secondary" style="background-color: #0d1117;">
                                <tr>
                                    <th class="ps-4">Product Name</th>
                                    <th class="text-center">Total Scans</th>
                                    <th class="text-center">Security Status</th>
                                    <th class="text-end">Last Scan</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (stats.length === 0) { %>
                                    <tr><td colspan="5" class="text-center py-4 text-muted">No data available.</td></tr>
                                <% } %>

                                <% stats.forEach(stat => { %>
                                    <tr>
                                        <td class="ps-4 fw-bold"><%= stat._id %></td>
                                        <td class="text-center">
                                            <span class="badge bg-secondary bg-opacity-25 text-secondary border border-secondary">
                                                <%= stat.totalScans %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <% if (stat.totalIssues > 0) { %>
                                                <span class="badge bg-danger bg-opacity-25 text-danger border border-danger">
                                                    <%= stat.totalIssues %> Critical Issues
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-success bg-opacity-25 text-success border border-success">
                                                    Secure
                                                </span>
                                            <% } %>
                                        </td>
                                        <td class="text-end text-muted small">
                                            <%= new Date(stat.lastScan).toLocaleDateString() %> 
                                            <%= new Date(stat.lastScan).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                                        </td>
                                        <td class="text-center">
                                            <a href="/dashboard/view/<%= stat._id %>" class="btn btn-sm btn-outline-primary">View Report</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Prepare Data from EJS
        const rawData = <%- JSON.stringify(monthlyData) %>;
        
        // Helper to format "2023-11"
        const labels = rawData.map(d => `${d._id.year}-${String(d._id.month).padStart(2, '0')}`);
        const issuesData = rawData.map(d => d.issueCount);
        const scansData = rawData.map(d => d.scanCount);

        const ctx = document.getElementById('trendChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Secrets Found',
                        data: issuesData,
                        borderColor: '#fa7970', // Red
                        backgroundColor: 'rgba(250, 121, 112, 0.1)',
                        tension: 0.4,
                        fill: true
                    },
                    {
                        label: 'Total Scans',
                        data: scansData,
                        borderColor: '#58a6ff', // Blue
                        backgroundColor: 'rgba(88, 166, 255, 0.0)', // No fill
                        borderDash: [5, 5],
                        tension: 0.4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { labels: { color: '#8b949e' } }
                },
                scales: {
                    y: { 
                        grid: { color: '#30363d' },
                        ticks: { color: '#8b949e' },
                        beginAtZero: true
                    },
                    x: {
                        grid: { display: false },
                        ticks: { color: '#8b949e' }
                    }
                }
            }
        });
    </script>
</body>
</html>